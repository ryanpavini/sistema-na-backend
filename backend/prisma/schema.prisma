generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  passwordResetToken   String?   @unique
  passwordResetExpires DateTime?

  secretariatRecords SecretariatRecord[]
  events             Event[]
  meetings           Meeting[]
}

model SecretariatRecord {
  id          String   @id @default(uuid())
  cashValue   Float
  pixValue    Float
  createdAt   DateTime @default(now())

  author      Admin    @relation(fields: [authorId], references: [id], onDelete: Cascade)
  authorId    String

  @@map("secretariat_records")
}

model Event {
  id          String   @id @default(uuid())
  title       String
  description String
  dateTime    DateTime
  location    String
  type        String
  category    String

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  author      Admin    @relation(fields: [authorId], references: [id], onDelete: Cascade)
  authorId    String

  @@map("events")
}

model Meeting {
  id          String   @id @default(uuid())
  dayOfWeek   String
  time        String
  type        String
  category    String
  roomOpener  String

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  author      Admin    @relation(fields: [authorId], references: [id], onDelete: Cascade)
  authorId    String

  @@map("meetings")
}